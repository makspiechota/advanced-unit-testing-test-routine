FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies
RUN npm install

# Copy service files
COPY services/emailServerReliable.ts ./services/

# Expose the service port
EXPOSE 3003

# Start the service
CMD ["npx", "ts-node", "services/emailServerReliable.ts"]
