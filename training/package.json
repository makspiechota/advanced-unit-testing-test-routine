{
  "name": "user-registration-exercise",
  "version": "1.0.0",
  "description": "Unit testing exercise for user registration with external dependencies",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "chmod +x scripts/start-docker.sh && ./scripts/start-docker.sh",
    "stop": "chmod +x scripts/stop-docker.sh && ./scripts/stop-docker.sh",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "docker:clean": "docker compose down -v",
    "start:services": "ts-node services/emailServer.ts",
    "setup:db": "ts-node scripts/setupDatabase.ts",
    "setup:db:init": "chmod +x scripts/setup-database.sh && ./scripts/setup-database.sh",
    "dev": "ts-node src/index.ts",
    "example:email": "ts-node examples/test-email-service.ts",
    "example:email-reliable": "ts-node examples/test-email-service-reliable.ts",
    "example:users": "ts-node examples/test-user-repository.ts"
  },
  "keywords": [
    "unit-testing",
    "jest",
    "testing",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3"
  }
}
